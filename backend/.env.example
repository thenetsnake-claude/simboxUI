# Application
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=simbox_ui
DB_USER=simbox
DB_PASSWORD=simbox

# Redis (Standard Configuration)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password

# Redis Sentinel (for high availability)
REDIS_SENTINEL_ENABLED=false
REDIS_SENTINELS=localhost:26379,localhost:26380,localhost:26381
REDIS_MASTER_NAME=mymaster
REDIS_SENTINEL_USERNAME=sentinel-user
REDIS_SENTINEL_PASSWORD=sentinel-password

# Redis TLS
REDIS_TLS_ENABLED=false
REDIS_TLS_REJECT_UNAUTHORIZED=true
# REDIS_TLS_CA_CERT=path/to/ca.crt
# REDIS_TLS_CERT=path/to/client.crt
# REDIS_TLS_KEY=path/to/client.key

# Auth0
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_AUDIENCE=https://your-api-audience

# SMSEagle
SMSEAGLE_BASE_URL=http://192.168.1.100/api/v2
SMSEAGLE_ACCESS_TOKEN=your-access-token

# Sync Settings
SYNC_INTERVAL_MINUTES=2
STATUS_UPDATE_INTERVAL_MINUTES=5
INITIAL_SYNC_DAYS=7

# Logging
LOG_LEVEL=info
