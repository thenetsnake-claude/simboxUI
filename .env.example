# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=simbox_ui
DB_USER=simbox
DB_PASSWORD=simbox
DB_ROOT_PASSWORD=root

# Backend Configuration
BACKEND_PORT=3000
NODE_ENV=development

# Frontend Configuration
FRONTEND_PORT=4200

# Redis Configuration (Standard Mode)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=your-secure-redis-password

# Redis Sentinel (High Availability - recommended for production)
REDIS_SENTINEL_ENABLED=false
REDIS_SENTINELS=localhost:26379,localhost:26380,localhost:26381
REDIS_MASTER_NAME=mymaster
REDIS_SENTINEL_USERNAME=sentinel-user
REDIS_SENTINEL_PASSWORD=sentinel-password

# Redis TLS (Optional - recommended for production)
REDIS_TLS_ENABLED=false
REDIS_TLS_REJECT_UNAUTHORIZED=true
# REDIS_TLS_CA_CERT=/path/to/ca.crt
# REDIS_TLS_CERT=/path/to/client.crt
# REDIS_TLS_KEY=/path/to/client.key

# Auth0 Configuration
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_AUDIENCE=https://your-api-audience
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# SMSEagle Configuration
SMSEAGLE_BASE_URL=http://192.168.1.100/api/v2
SMSEAGLE_ACCESS_TOKEN=your-access-token

# Sync Configuration
SYNC_INTERVAL_MINUTES=2
STATUS_UPDATE_INTERVAL_MINUTES=5
INITIAL_SYNC_DAYS=7

# Logging
LOG_LEVEL=info
